{
  "name": "pay-with-flexbase",
  "version": "0.2.0",
  "description": "A custom web component that redirects to Flexbase for checkout, for use with partnered vendors.",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "author": "Flexbase",
  "license": "MIT",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "test": "jest --no-cache",
    "lint": "eslint 'src/**/*.{ts,tsx,json}'",
    "format": "prettier --write 'src/**/*.{ts,tsx,css,md,json}'",
    "packr": "packr"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flexbase-eng/pay-with-flexbase.git"
  },
  "keywords": [
    "Flexbase",
    "flexbase"
  ],
  "bugs": {
    "url": "https://github.com/flexbase-eng/pay-with-flexbase/issues"
  },
  "homepage": "https://github.com/flexbase-eng/pay-with-flexbase",
  "files": [
    "dist"
  ],
  "dependencies": {},
  "devDependencies": {
    "@flexbase/packr": "^1.0.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@types/jest": "^28.1.3",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "esbuild": "^0.14.47",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.2",
    "prettier": "^2.7.0",
    "rollup": "^2.75.7",
    "rollup-plugin-typescript2": "^0.32.1",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "tsconfig.json": "^1.0.11",
    "typescript": "^4.7.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tests/tsconfig.tests.json"
      }
    },
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "moduleDirectories": [
      "<rootDir>/src/",
      "<rootDir>/tests/",
      "node_modules"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid",
    "tabWidth": 4,
    "useTabs": false,
    "printWidth": 200
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "prettier",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "no-unused-vars": [
        "warn",
        {
          "vars": "all",
          "args": "none"
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "vars": "all",
          "args": "none"
        }
      ],
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/no-non-null-assertion": "warn",
      "@typescript-eslint/no-inferrable-types": "off",
      "@typescript-eslint/no-namespace": "off"
    },
    "env": {
      "browser": true,
      "es2021": true
    }
  },
  "eslintIgnore": [
    "node_modules",
    "dist",
    "coverage",
    "docs",
    "tests"
  ],
  "esbuild": {
    "jsxFactory": "DOMcreateElement",
    "jsxFragment": "DOMcreateFragment",
    "jsxInject": "`import { DOMcreateElement, DOMcreateFragment } from '@/helper/jsxFactory';`"
  },
  "packr": {
    "output": "output",
    "properties": [
      "name",
      "version",
      "description",
      "main",
      "module",
      "types",
      "homepage",
      "repository",
      "bugs",
      "author",
      "license",
      "dependencies",
      "type",
      "bin",
      "keywords"
    ],
    "include": [
      "dist",
      "README.md",
      "LICENSE",
      "yarn.lock"
    ]
  }
}
